@model CelicniProfili.Models.Admin_SMTP_parameteres

@{
	ViewBag.Title = "SMTP Parameters";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SMTP params</h2>

@using (Html.BeginForm()) {
	<fieldset>
		@Html.AntiForgeryToken()
		@Html.ValidationSummary(true)

		@if (@ViewBag.poruka != null) {
			<div style="border: 1px solid red">
				@ViewBag.poruka
			</div>
		}

		@{
			string Name = ""; string pass = ""; string host = "";
			if (ViewBag.flag == 1) {
				Name = Model.UserName; pass = Model.password; host = Model.host;
			}
		}

		<table>
			<tr>
				@Html.HiddenFor(model => model.Ind)
			</tr>

			<tr>
				<td>@Html.LabelFor(a => a.UserName)</td>
				<td>@Html.TextBoxFor(a => a.UserName, new { @Value = Name, placeholder = "user@gmail.com" })</td>
				<td>@Html.ValidationMessageFor(a => a.UserName)</td>
			</tr>

			<tr>
				<td>@Html.LabelFor(a => a.password)</td>
				<td>@Html.TextBoxFor(a => a.password, new { @Value = pass })</td>
				<td>@Html.ValidationMessageFor(a => a.password)</td>
			</tr>

			<tr>
				<td>@Html.LabelFor(a => a.host)</td>
				<td>@Html.TextBoxFor(a => a.host, new { @Value = host, placeholder = "smtp.gmail.com" })</td>
				<td>@Html.ValidationMessageFor(a => a.host)</td>
			</tr>

			<tr>
				<td></td>
				<td>
					<input type="submit" value="Save" class="btn btn-info" />
				</td>
				<td>
					@Html.ActionLink("Back to User Panel", "UserPanel", "Users", new { area = "" }, new { @class = "btn btn-info" })
				</td>
			</tr>
		</table>
			
	</fieldset>
}